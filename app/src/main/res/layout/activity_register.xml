<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="50dp"
            android:gravity="center"
            android:background="#FB0000"
            android:text="Student Registeration"
            android:textColor="#0C0B0B"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Name"
            android:layout_below="@+id/head"/>

        <EditText
            android:id="@+id/icode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Id Code"
            android:layout_below="@+id/name"/>

        <CheckBox
            android:id="@+id/Chkmale"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Male"
            android:textSize="17dp"
            android:layout_below="@+id/icode"/>

        <CheckBox
            android:id="@+id/Chkfemale"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icode"
            android:layout_marginLeft="150dp"
            android:textSize="17dp"
            android:hint="Female" />

        <EditText
            android:id="@+id/mobno"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10"
            android:hint="Mob. No."
            android:layout_below="@id/Chkmale"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="Email"
            android:layout_below="@id/mobno"/>

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1" />

        <EditText
            android:id="@+id/conpass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="Confirm Password"
            android:layout_below="@+id/pass"/>

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="1.5in"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Register"
            android:layout_below="@+id/conpass"/>

        <Button
            android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:hint="Already Register Login Here ?"
            android:layout_below="@+id/btn_reg"/>
    </RelativeLayout>
</ScrollView>